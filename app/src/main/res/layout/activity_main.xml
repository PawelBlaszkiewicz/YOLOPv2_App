<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yolopv2app.MainActivity">


    <ScrollView
        android:layout_width="413dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/input_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:checked="false"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical|end"
                    android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Camera Mode"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:visibility="visible"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:checked="false"
                    android:gravity="center_vertical|end"
                    android:text="Video Mode"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:visibility="visible"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>
            <Button
                android:id="@+id/object_detection_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp"
                android:elevation="2dp"
                android:text="@string/perform_object_detection" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="384dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/output_image" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>